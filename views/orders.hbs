<div class="container">
    <h1>Orders</h1>
    {{#if orders.length}}
    {{#each orders}}
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="card">
                <div class="card-content">
                    <div class="card-title">
                        Order <small>{{_id}}</small>
                    </div>
                    <p class="date">{{date}}</p>

                    <p><span>{{user.userId.name}} ({{user.userId.email}})</span></p>

                    <ol>
                        {{#each books}}
                        <li>
                            {{book.title}} (x <strong>{{count}}</strong>)
                        </li>
                        {{/each}}
                    </ol>
                    <hr>
                    <p>Price: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>Order is empty</p>
    {{/if}}
</div>